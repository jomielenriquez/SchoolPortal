@inject Portal.Services.IBaseService<Portal.Data.Entities.FileStorage> fileService
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Files";
    var files = fileService.GetAll();
}
<form asp-action="UploadFile" asp-controller="File" method="post" enctype="multipart/form-data">
    <input type="file" name="uploadedFile" />
    <button type="submit">Upload</button>
</form>

@foreach(Portal.Data.Entities.FileStorage file in files)
{
    <a href="@Url.Action("DownloadFile", "File", new { id = file.Id })">@file.FileName</a>
    <img src="data:image/jpeg;base64,@file.FileData" alt="Image" />
    <iframe src="data:application/pdf;base64,@file.FileData" width="100%" height="600px">
        This browser does not support PDFs. Please download the PDF to view it:
        <a href="data:application/pdf;base64,@file.FileData" download="@file.FileName">Download PDF</a>
    </iframe>
}

