@model Portal.Data.Entities.Admin
<div class="card">
    <h5 class="card-header">Update Password</h5>
    <form method="post" asp-action="UpdateMyAccountPassword" asp-controller="Admin">
        <div class="card-body">
            <div class="mb-3 row">
                @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @id = "Id", @name = "Id", @style = "display:none" })
                <label for="currentPassword" class="col-sm-2 col-form-label">Current Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="currentPassword" name="currentPassword" />
                </div>
            </div>
            <div class="mb-3 row">
                <label for="newPassword" class="col-sm-2 col-form-label">New Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="newPassword" name="newPassword" />
                </div>
            </div>
            <div class="mb-3 row">
                <label for="confirmNewPassword" class="col-sm-2 col-form-label">Confirm New Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>