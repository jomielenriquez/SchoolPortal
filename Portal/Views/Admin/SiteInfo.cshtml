@inject Portal.Services.ISystemParameterService systemParameter
@using Portal.Services
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Site Info";
}
@{
    var systemInformation = systemParameter.GetBySystemParameterType();
}
<div class="card">
    <h5 class="card-header">Site Information</h5>
    <form method="post" asp-action="SaveInformation" asp-controller="Admin">
        <div class="card-body">
            <h6 class="card-title">Informations in the Website</h6>
            @foreach (Portal.Data.Entities.SystemParameter sysInfo in systemInformation)
            {
                <div class="mb-3 row">
                    <label for="@(sysInfo.Id)" class="col-sm-2 col-form-label">@sysInfo.Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="@(sysInfo.Id)" name="@(sysInfo.Id)" value="@(sysInfo.Value)">
                    </div>
                </div>
            }
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>