@model Portal.Data.Entities.Admin
<div class="card">
    <h5 class="card-header">My Account</h5>
    <form method="post" asp-action="SaveMyAccount" asp-controller="Admin">
        <div class="card-body">
            <div class="mb-3 row">
                @Html.TextBoxFor(m => m.Id, new { @class = "form-control", @id = "Id", @name = "Id", @style = "display:none" })
                <label for="FIRSTNAME" class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.FIRSTNAME, new { @class = "form-control", @id = "FIRSTNAME", @name = "FIRSTNAME" })
                </div>
            </div>
            <div class="mb-3 row">
                <label for="LASTNAME" class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.LASTNAME, new { @class = "form-control", @id = "LASTNAME", @name = "LASTNAME" })
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>