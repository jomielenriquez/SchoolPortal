@inject Portal.Services.IBaseService<Portal.Data.Entities.NewsAndAnnouncements> newsAndAnnouncements
@using Portal.Services
@model Portal.Models.AppModel<Portal.Data.Entities.NewsAndAnnouncements>
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "List News And Announcements";
}
<h3>News and Announcements</h3>
<a href="#" data-url="@Url.Action("LoadAddModal", "NewsAndAnnouncement")" class="open-modal btn btn-primary btn-sm"><i class="bi bi-plus-circle"></i> Add News</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Caption</th>
            <th scope="col">Ordering</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var data in Model.Data)
        {
            <tr>
                <td>@data.Title</td>
                <td>@Html.Raw(data.Caption)</td>
                <td>@data.Order</td>
                <td>
                    <a href="@Url.Action("Delete", "NewsAndAnnouncement", new { id = data.Id })" class="btn btn-danger btn-sm"><i class="bi bi-trash3"></i> Delete</a>
                    <a href="#" data-url="@Url.Action("LoadAddModal", "NewsAndAnnouncement", new { id = data.Id })" class="open-modal btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
    <div class="btn-group me-2" role="group" aria-label="First group">
        @{
            var buttonCount = (Model.Count / Model.PageModel.PageSize) + 1;
        }
        @for(var i = 1; i <= buttonCount; i++)
        {
            <a class="btn btn-primary"
               asp-controller="NewsAndAnnouncement"
               asp-action="ListScreen"
               asp-route-Page="@i"
               asp-route-PageSize="@Model.PageModel.PageSize"
               asp-route-OrderByProperty="@Model.PageModel.OrderByProperty"
               asp-route-IsAscending="@Model.PageModel.IsAscending">
               @i.ToString()
             </a>
        }
    </div>
</div>